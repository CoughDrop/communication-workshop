{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Login via CoughDrop" key='login_via_coughdrop'}}</h3>
  </div>
  <div class="modal-body">
    {{#if error}}
      <p class='text-danger'>{{t "There was an unexpected problem retrieving the user information. Please close the popup and try again." key='error_authorizing'}}</p>
    {{else}}
      <iframe src='/auth/coughdrop/check' frameborder='0' style='width: 100%; height: 400px;'/>
    {{/if}}
  </div>
{{/modal-dialog}}

<div style='width: 400px; border: 1px solid #888; border-radius: 5px; position: absolute; top: calc(50vh - 150px); left: calc(50vw - 200px); padding: 10px 20px;'>
  <h2>Login</h2>
  <form {{action 'login' on='submit'}} autocomplete="off">
    <div class="form-group">
      <div class="col-sm-12">
        <button type='button' class='btn btn-default' {{action 'external_login' 'coughdrop'}}>
          <img src="https://app.mycoughdrop.com/images/logo-big.png" style='width: 30px;'>
          Login Using CoughDrop
        </button>
      </div>
    </div>
    <div class="form-group">
      <label for="user_name" class="col-sm-12 control-label" style='margin-top: 15px; margin-bottom: -2px;'>{{t "User Name or Email" key='user_name_or_email'}}</label>
      <div class="col-sm-12">
        {{input type='text' class='form-control' id='user_name' value=user_name placeholder='User name or email'}}
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-12 control-label" style='margin-top: 15px; margin-bottom: -2px;'>{{t "Password" key='password'}}</label>
      <div class="col-sm-12">
        {{input type='password' class='form-control' id='password' value=password placeholder=''}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12" style='margin-top: 15px; margin-bottom: -2px;'>
        <button type='submit' class='btn btn-primary btn-lg'>
          {{#if status.attempting}}
            {{t "Logging In..." key='logging_in'}}
          {{else if status.error}}
            {{t "Error Logging In" key='error_logging_in'}}
          {{else}}
            {{t "Log In" key='log_in'}}
          {{/if}}
        </button>
      </div>
    </div>
  </form>
</div>
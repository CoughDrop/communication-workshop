<div style='height: calc(100vh - 60px); border: 1px solid #888; border-radius: 5px;'>
  <div style='height: 200px; overflow: auto; border-bottom: 1px solid #888; padding: 5px 10px;'>
    {{#if activities}}
      <h2 style='margin-top: 5px;'>{{current_activity.header}}</h2>
      {{#if current_activity.image}}
        <img src={{current_activity.image}} style='float: left; max-width: 100px; max-height: 100px; margin-right: 15px; margin-bottom: 5px;'/>
      {{/if}}
      <div style='white-space: pre-line; min-height: 100px;'>{{current_activity.prompt}}</div>
    {{else}}
      <strong>Couldn't find any valid activities</strong>
    {{/if}}
  </div>
  <iframe src={{url}} style='width: 100%; height: calc(100vh - 60px - 200px - 5px); border: 0' frameborder='0'></iframe>
</div>

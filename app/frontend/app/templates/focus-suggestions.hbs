{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "Suggestions" key='suggestions'}}</h3>
  </div>
  <div class="modal-body">
    {{#if suggestions.loading}}
      {{t "Loading suggestions..." key='loading_suggestions'}}
    {{else if suggestions.error}}
      {{t "Error loading suggestions" key='error_loading_suggestions'}}
    {{else if suggestions}}
      {{example-carousel entries=mapped_suggestions type='individual' pin='pin'}}
    {{else}}
      {{t "No suggestions found" key='no_suggestions_found'}}
    {{/if}}
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-default" {{action 'close'}}>{{t "Close" key='close'}}</a>
  </div>
{{/modal-dialog}}
